<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">
  <PreferenceCategory
    app:iconSpaceReserved="false"
    app:title="@string/settings_header_basic_title">
    <ListPreference
      app:defaultValue="gw"
      app:entries="@array/coins"
      app:entryValues="@array/coins_values"
      app:key="coin"
      app:persistent="true"
      app:useSimpleSummaryProvider="true"
      app:title="@string/settings_item_coin_title" />
    <SwitchPreferenceCompat
      app:defaultValue="true"
      app:key="shake"
      app:persistent="true"
      app:summary="@string/settings_item_shake_summary"
      app:title="@string/settings_item_shake_title"
      />
    <SwitchPreferenceCompat
      app:defaultValue="true"
      app:key="sound"
      app:persistent="true"
      app:summary="@string/settings_item_sound_summary"
      app:title="@string/settings_item_sound_title"
      />
    <SwitchPreferenceCompat
      app:defaultValue="true"
      app:key="stats"
      app:persistent="true"
      app:summary="@string/settings_item_stats_summary"
      app:title="@string/settings_item_stats_title" />
    <SwitchPreferenceCompat
      app:defaultValue="true"
      app:key="vibrate"
      app:persistent="true"
      app:summary="@string/settings_item_vibrate_summary"
      app:title="@string/settings_item_vibrate_title" />
  </PreferenceCategory>
  <PreferenceCategory
    app:iconSpaceReserved="false"
    app:title="@string/settings_header_advanced_title">
    <com.banasiak.coinflip.ui.NumberPreference
      app:defaultValue="100000"
      app:dialogMessage="@string/settings_item_selftest_dialog"
      app:key="diagnostics"
      app:persistent="true"
      app:summary="@string/settings_item_selftest_summary"
      app:title="@string/settings_item_selftest_title" />
    <SwitchPreferenceCompat
      app:defaultValue="true"
      app:key="dynamic"
      app:persistent="true"
      app:summary="@string/settings_item_dynamic_colors_summary"
      app:title="@string/settings_item_dynamic_colors_title" />
    <ListPreference
      app:defaultValue="medium"
      app:entries="@array/force"
      app:entryValues="@array/force_values"
      app:dependency="shake"
      app:key="force"
      app:min="1"
      app:persistent="true"
      app:summary="@string/settings_item_force_summary"
      app:title="@string/settings_item_force_title" />
    <Preference
      app:key="resetStats"
      app:title="@string/settings_item_reset_stats_title" />
  </PreferenceCategory>
</PreferenceScreen>